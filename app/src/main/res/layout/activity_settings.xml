<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdb.yearbook.android.SettingsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/settingsrecyclerview"
        android:layout_width="372dp"
        android:layout_height="246dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsGroupPhoto" />

    <Button
        android:id="@+id/changeNameButton"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="44dp"
        android:text="Change Name"
        app:layout_constraintBottom_toBottomOf="@+id/settingsGroupPhoto"
        app:layout_constraintStart_toStartOf="@+id/settingsGroupPhoto" />

    <Button
        android:id="@+id/changePhotoButton"
        android:layout_width="135dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="44dp"
        android:text="Change Photo"
        app:layout_constraintBottom_toBottomOf="@+id/settingsGroupPhoto"
        app:layout_constraintEnd_toEndOf="@+id/settingsGroupPhoto" />

    <ImageView
        android:id="@+id/settingsGroupPhoto"
        android:layout_width="366dp"
        android:layout_height="179dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/transparentImageView"
        android:layout_width="359dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsGroupPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/settingsGroupPhoto"
        app:srcCompat="@drawable/fab_label_background" />
    <TextView
        android:id="@+id/settingsGroupText"
        android:layout_width="301dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:hint="Group Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/background"
        app:layout_constraintStart_toStartOf="@+id/transparentImageView"
        app:layout_constraintTop_toTopOf="@+id/transparentImageView" />






</android.support.constraint.ConstraintLayout>