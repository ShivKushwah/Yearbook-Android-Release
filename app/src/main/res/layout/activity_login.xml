<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdb.yearbook.android.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_height="0dp">

        <ImageView
            android:layout_height="103dp"
            app:srcCompat="@drawable/yb"
            android:id="@+id/logo_image_sign_up"
            android:foregroundTint="@color/purple_main"
            android:foregroundTintMode="multiply"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="105dp"
            android:paddingLeft="16dp"
            android:layout_marginLeft="32dp" />

        <TextView
            android:id="@+id/createAnAccountTextView"
            style="@style/HeaderTextView"

            android:layout_height="37dp"
            android:text="Welcome Back"
            android:textSize="30sp"
            android:fontFamily="avenir"
            android:textColor="@color/greyText"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_image_sign_up"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Sign in to continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signInToContinueTextView"
            android:fontFamily="avenir"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:layout_marginLeft="32dp"
            android:textColor="@color/greyText"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextViewSignUp"
            android:fontFamily="avenir"
            android:textColor="@color/greyText"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:textAlignment="textStart"
            android:layout_marginLeft="32dp" />

        <EditText
            android:id="@+id/loginEmailTextID"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:ems="10"
            android:hint="john.doe@gmail.com"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            android:fontFamily="avenir"
            android:typeface="normal"
            android:textColor="@color/greyText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextViewSignUp"
            app:layout_constraintLeft_toLeftOf="@+id/emailTextViewSignUp"
            app:layout_constraintRight_toRightOf="@+id/createAnAccountTextView"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="textStart"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordTextViewSignUp"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/loginEmailTextID"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginEmailTextID"
            android:textSize="18sp"
            android:textColor="@color/greyText"
            android:layout_marginLeft="32dp" />

        <EditText
            android:id="@+id/loginPasswordTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="********"
            android:inputType="textPassword"
            android:textColorHighlight="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/passwordTextViewSignUp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextViewSignUp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="textStart"
            android:layout_gravity="center_vertical|fill_vertical"
            android:foregroundGravity="center_vertical|fill_vertical"
            android:gravity="center_vertical|fill_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <TextView
            android:id="@+id/forgotPasswordTextView"
            style="@style/LoginTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginPasswordTextID"
            app:layout_constraintRight_toRightOf="@+id/loginPasswordTextID"
            android:textStyle="normal|bold"
            android:textColor="@color/greyText"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            android:layout_marginRight="32dp" />

        <Button
            android:id="@+id/loginButtonID"
            style="@style/LoginButton"

            android:layout_height="57dp"
            android:text="Log In"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgotPasswordTextView"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.07">

            <TextView
                android:id="@+id/newUserTextView"
                style="@style/LoginTextView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New User?"
                app:layout_constraintRight_toLeftOf="@+id/loginSignupButtonID"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/loginButtonID"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@+id/loginButtonID"
                app:layout_constraintHorizontal_bias="0.41"
                app:layout_constraintVertical_bias="0.52"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/loginSignupButtonID"
                style="@style/LoginTextView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@+id/newUserTextView"
                app:layout_constraintBottom_toBottomOf="@+id/newUserTextView"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintRight_toRightOf="@+id/loginButtonID"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
