<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.mdb.yearbook.android.YearbookActivity">

    <ImageView
        android:id="@+id/groupCoverImageID"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/profile_purple"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.mdb.yearbook.android.CustomCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupCoverImageID"
        />

</RelativeLayout>