<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdb.yearbook.android.SignupActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_height="103dp"
            app:srcCompat="@drawable/yb"
            android:id="@+id/logo_image_sign_up"
            android:foregroundTint="@color/purple_main"
            android:foregroundTintMode="multiply"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="105dp"
            android:paddingLeft="16dp"
            android:layout_marginLeft="32dp" />

        <TextView
            android:id="@+id/createAnAccountTextView"
            style="@style/HeaderTextView"

            android:layout_height="37dp"
            android:text="Create an Account"
            android:textSize="30sp"
            android:fontFamily="avenir"
            android:textColor="@color/greyText"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_image_sign_up"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditText"
            android:textStyle="normal|bold"
            android:fontFamily="avenir"
            android:textColor="@color/greyText"
            android:textSize="18sp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signupNameTextID"
            android:layout_marginLeft="32dp"
            android:fontFamily="avenir"
            android:hint="John Doe"
            android:layout_marginRight="32dp" />

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextViewSignUp"
            android:fontFamily="avenir"
            android:textColor="@color/greyText"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:textAlignment="textStart"
            android:layout_marginLeft="32dp" />

        <EditText
            android:id="@+id/signupEmailTextID"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:ems="10"
            android:hint="john.doe@gmail.com"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            android:fontFamily="avenir"
            android:typeface="normal"
            android:textColor="@color/greyText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextViewSignUp"
            app:layout_constraintLeft_toLeftOf="@+id/emailTextViewSignUp"
            app:layout_constraintRight_toRightOf="@+id/createAnAccountTextView"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="textStart"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordTextViewSignUp"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="@+id/signupEmailTextID"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signupEmailTextID"
            android:textSize="18sp"
            android:textColor="@color/greyText"
            android:layout_marginLeft="32dp" />

        <EditText
            android:id="@+id/signupPasswordTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="********"
            android:inputType="textPassword"
            android:textColorHighlight="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/passwordTextViewSignUp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextViewSignUp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="textStart"
            android:layout_gravity="center_vertical|fill_vertical"
            android:foregroundGravity="center_vertical|fill_vertical"
            android:gravity="center_vertical|fill_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <Button
            android:id="@+id/signupButtonID"
            style="@style/LoginButton"

            android:layout_height="57dp"
            android:text="Sign Up"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
